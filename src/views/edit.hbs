<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card card-body bg-dark p-4 text-white">
                <h3>Actualizar tarea</h3>
            <form action="/tasks/{{task._id}}/edit" method="post" class="">
                <div class="mb-3">
                    <input type="text" name="title" placeholder="Título" value="{{task.title}}"class="form-control rounded-0 bg-dark text-white">
                </div>
                <div class="mb-3">
                    <textarea name="description" id="" cols="30" rows="3" placeholder="Agregar descripción" class="form-control rounded-0 bg-dark text-white">{{task.description}}</textarea>
                </div>
                <button class="btn btn-info">Actualizar</button>
            </form>
            </div>

        </div>
    </div>
</div>
